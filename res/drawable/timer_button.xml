 		<layer-list>
            <item>
        		<bitmap android:src="@drawable/ic_action_stop" android:gravity="center"> </bitmap>
        	</item>
        	<item>
        		<shape android:shape="ring" android:innerRadius="20dp" android:thickness="2dp" android:useLevel="false">
            		<solid android:color="#eeffffff"/>
